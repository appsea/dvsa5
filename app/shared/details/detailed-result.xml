<Page
        class="page"
        loaded="onPageLoaded"
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <!--
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!--
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="left">
        </ActionItem>
        <Label class="action-bar-title">
            <label.formattedText>
                <formattedString>
                    <formattedString.spans>
                        <span text="{{ message }}"/>
                        <span text=" Questions"/>
                    </formattedString.spans>
                </formattedString>
            </label.formattedText>
        </Label>
    </ActionBar>

    <DockLayout stretchLastChild="true">
        <StackLayout dock="top">
        </StackLayout>
        <StackLayout dock="bottom" class="layout-class" horizontalAlignment="center" orientation="horizontal">
            <Button class="all t-12" text="All" tap="all" width="20%" margin="2dpi" />
            <Button class="correct t-12" text="Correct" tap="correct" width="25%" margin="2dpi" />
            <Button class="incorrect t-12" text="Wrong" tap="incorrect" width="25%" margin="2dpi" />
            <Button class="skipped t-12" text="Skipped" tap="skipped" width="30%" margin="2dpi" />
        </StackLayout>
        <StackLayout visibility="{{ questions.length === 0 ? 'visible' : 'collapsed' }}" class="margin" horizontalAlignment="center">
            <Label textWrap="true" textAlignment="center" marginTop="20dpi">
                <label.formattedText>
                    <formattedString>
                        <formattedString.spans>
                            <span text="No Questions Were "/>
                            <span text="{{ message }}"/>
                        </formattedString.spans>
                    </formattedString>
                </label.formattedText>
            </Label>
        </StackLayout>
        <StackLayout class="margin" visibility="{{ questions.length > 0 ? 'visible' : 'collapsed' }}">
            <ListView id="listView" items="{{ questions }}" separatorColor="blue" itemTemplateSelector="$index">
                <ListView.itemTemplate>
                    <StackLayout>
                        <Label marginTop="20dpi" textAlignment="center" fontWeight="Bold">
                            <Label.formattedText>
                                <FormattedString>
                                    <FormattedString.spans>
                                        <span text="Question " />
                                        <span text="{{ $index + 1 }}"/>
                                        <span text=" Of "/>
                                        <span text="{{$parents['ListView'].questions, $parents['ListView'].questions.length }}" />
                                    </FormattedString.spans>
                                </FormattedString>
                            </Label.formattedText>
                        </Label>
                        <Label text="{{ prashna.text }}" textWrap="true" onswipe="handleSwipe"/>
                        <image src="{{ prashna.image }}" onswipe="handleSwipe" class="m-y-10" visibility="{{ prashna.image ? 'visible' : 'collapsed' }}"/>
                        <GridLayout columns="*,*" rows="auto,auto" style="margin-top:5" visibility="{{ options[0].image ? 'visible' : 'collapsed' }}">
                            <StackLayout row="0" col="0"
                                         class="{{ (!options[0].selected && !options[0].correct)? 'not-selected-image': (skipped && options[0].correct)? 'skipped':(options[0].selected && !options[0].correct)?'incorrect': 'correct'}}"
                                         tap="selectOption" onswipe="handleSwipe">
                                <image src="{{ options[0].image }}" tap="firstOption" class="m-5"
                                       onswipe="handleSwipe"
                                       visibility="{{ options[0].image ? 'visible' : 'collapsed' }}"/>
                            </StackLayout>
                            <StackLayout row="0" col="1"
                                         class="{{ (!options[1].selected && !options[1].correct)? 'not-selected-image': (skipped && options[1].correct)? 'skipped':(options[1].selected && !options[1].correct)?'incorrect': 'correct'}}"
                                         tap="selectOption" onswipe="handleSwipe">
                                <image src="{{ options[1].image }}" tap="secondOption" class="m-5"
                                       onswipe="handleSwipe"
                                       visibility="{{ options[1].image ? 'visible' : 'collapsed' }}"/>
                            </StackLayout>
                            <StackLayout row="1" col="0"
                                         class="{{ (!options[2].selected && !options[2].correct)? 'not-selected-image': (skipped && options[2].correct)? 'skipped':(options[2].selected && !options[2].correct)?'incorrect': 'correct'}}"
                                         tap="selectOption" onswipe="handleSwipe">
                                <image src="{{ options[2].image }}" tap="thirdOption" class="m-5"
                                       onswipe="handleSwipe"
                                       visibility="{{ options[2].image ? 'visible' : 'collapsed' }}"/>
                            </StackLayout>
                            <StackLayout row="1" col="1"
                                         class="{{ (!options[3].selected && !options[3].correct)? 'not-selected-image': (skipped && options[3].correct)? 'skipped':(options[3].selected && !options[3].correct)?'incorrect': 'correct'}}"
                                         tap="selectOption" onswipe="handleSwipe">
                                <image src="{{ options[3].image }}" tap="fourthOption" class="m-5"
                                       onswipe="handleSwipe"
                                       visibility="{{ options[3].image ? 'visible' : 'collapsed' }}"/>
                            </StackLayout>
                        </GridLayout>
                        <Repeater items="{{ options }}" row="1">
                            <Repeater.itemTemplate>
                                <GridLayout columns="auto,*" class="{{ (!selected && !correct)? 'not-selected': (skipped && correct)? 'skipped':(selected && !correct)?'incorrect': 'correct'}}">
                                    <Label col="0" text="{{ tag + '. ' }}"
                                           class="{{ (!selected && !correct)? 'not-selected': (skipped && correct)? 'skipped':(selected && !correct)?'incorrect': 'correct'}}"
                                           textWrap="true" marginTop="10dpi" marginBottom="10dpi" />
                                    <Label col="1" text="{{ description }}"
                                           class="{{ (!selected && !correct)? 'not-selected': (skipped && correct)? 'skipped':(selected && !correct)?'incorrect': 'correct'}}"
                                           textWrap="true" marginTop="10dpi" marginBottom="10dpi" />
                                </GridLayout>
                            </Repeater.itemTemplate>
                        </Repeater>
                        <Label text="Explanation: " style="font-weight: bold; margin-top: 10dpi"  textWrap="true" visibility="{{ explanation ? 'visible' : 'collapsed' }}"/>
                        <Label text="{{ explanation }}" textWrap="true" visibility="{{ explanation ? 'visible' : 'collapsed' }}"/>
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </DockLayout>
</Page>